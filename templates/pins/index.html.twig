{% extends 'base.html.twig' %}

{% block title 'find all pins' %}

{% block body %}
    <h1>{{ pluralize(pins|length, 'Pin') }}</h1>
    <ul>
        {% for pin in pins %}
            <li>
                <article>
                    <h2><a href="{{ path('app_pins_show', {'id' : pin.id}) }}">{{ pin.title }}</a></h2>
                    <p>{{ pin.description|u.truncate(10, '...', true) }}</p>
                    <p>submitted {{ pin.createdAt|ago }}</p>
{#                    <p>submitted {{ pin.createdAt|ago }}</p> = il y a deux jours #}
                </article>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
